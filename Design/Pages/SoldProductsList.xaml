            <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Center">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Width="180">Название товара</TextBlock>
                        <TextBlock Width="120">Стоимость</TextBlock>
                        <TextBlock Width="180">Покупатель</TextBlock>
                        <TextBlock Width="120">Дата покупки</TextBlock>
                    </StackPanel>
                    <ListView >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="180" TextWrapping="Wrap">Рюкзак универсальный</TextBlock>
                            <TextBlock Width="120">2500</TextBlock>
                            <TextBlock Width="180">Егоров Сергей</TextBlock>
                            <TextBlock Width="120">21.01.2023</TextBlock>
                            <Button Width="130" Height="30" Margin="5" FontSize="12" Content="Страница товара"></Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="180" TextWrapping="Wrap">Рюкзак универсальный</TextBlock>
                            <TextBlock Width="120">2500</TextBlock>
                            <TextBlock Width="180">Егоров Сергей</TextBlock>
                            <TextBlock Width="120">21.01.2023</TextBlock>
                            <Button Width="130" Height="30" Margin="5" FontSize="12" Content="Страница товара"></Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="180" TextWrapping="Wrap">Рюкзак универсальный</TextBlock>
                            <TextBlock Width="120">2500</TextBlock>
                            <TextBlock Width="180">Егоров Сергей</TextBlock>
                            <TextBlock Width="120">21.01.2023</TextBlock>
                            <Button Width="130" Height="30" Margin="5" FontSize="12" Content="Страница товара"></Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="180" TextWrapping="Wrap">Рюкзак универсальный</TextBlock>
                            <TextBlock Width="120">2500</TextBlock>
                            <TextBlock Width="180">Егоров Сергей</TextBlock>
                            <TextBlock Width="120">21.01.2023</TextBlock>
                            <Button Width="130" Height="30" Margin="5" FontSize="12" Content="Страница товара"></Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="180" TextWrapping="Wrap">Рюкзак универсальный</TextBlock>
                            <TextBlock Width="120">2500</TextBlock>
                            <TextBlock Width="180">Егоров Сергей</TextBlock>
                            <TextBlock Width="120">21.01.2023</TextBlock>
                            <Button Width="130" Height="30" Margin="5" FontSize="12" Content="Страница товара"></Button>
                        </StackPanel>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="2" Background="Blue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Margin="2" Content="Назад"></Button>
        </Grid>
    </Grid>
</Page>
